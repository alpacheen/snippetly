"use client";

import { useState } from "react";
import RealtimeCommentsSection from "./RealtimeCommentsSection";
import NewCommentForm from "./NewCommentForm";

type Props = {
  snippetId: string;
};

export default function RealtimeCommentsContainer({ snippetId }: Props) {
  const [refreshTrigger, setRefreshTrigger] = useState(0);

  const handleCommentAdded = () => {
    setRefreshTrigger(prev => prev + 1);
  };

      return (
        <>
          <RealtimeCommentsSection key={refreshTrigger} snippetId={snippetId} />
          <div>
            <RealtimeCommentsSection snippetId={snippetId} />
            <NewCommentForm snippetId={snippetId} onCommentAdded={handleCommentAdded} />
          </div>
        </>
  );
}